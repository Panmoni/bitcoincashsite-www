---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Boxes from '~/components/widgets/Boxes.astro';
import BigVid from '~/components/widgets/BigVid.astro';
import Content from '~/components/widgets/Content.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import InnerTitle from '~/components/widgets/InnerTitle.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>

  <!-- InnerTitle Widget ******************* -->

  <InnerTitle>
    <Fragment slot="title">
      Bitcoin Cash Support
    </Fragment>

    <Fragment slot="subtitle">
      Connect with other builders and get support.
    </Fragment>
  </InnerTitle>


  <Boxes
    title="How to Get Help with BCH"
    subtitle="Bitcoin Cash has lots of support and discussion options for you."
    highlight=""
    items={[
      {
        title: 'r/BitcoinCash',
        description:
          'BCH-specific discussion.',
        icon: 'https://static.panmoni.org/bitcoincashsite/reddit.jpeg',
        url: 'https://www.reddit.com/r/bitcoincash/',
      },
      {
        title: 'BitcoinCashSite',
        description:
          'BCH livestreams & tutorials.',
        icon: 'https://static.panmoni.org/bitcoincashsite/youtube.png',
        url: 'https://www.youtube.com/@RealBitcoinCashSite',
      },
      {
        title: 'BitcoinCashResearch.org',
        description:
          'BCH research forum.',
        icon: 'https://static.panmoni.org/bitcoincashsite/research.png',
        url: 'https://bitcoincashresearch.org/',
      },
      {
        title: 'Bitcoin Cash Node',
        description:
          'BCH full node support.',
        icon: 'https://static.panmoni.org/bitcoincashsite/telegram.jpeg',
        url: 'https://t.me/bitcoincashnode',
      },
      {
        title: 'TX Street',
        description:
          'BCH mempool visualizer.',
        icon: 'https://static.panmoni.org/bitcoincashsite/txstreet.png',
        url: 'https://txstreet.com/v/bch-btc',
      },
    ]}
  />

  <Boxes
    title=""
    subtitle="Media"
    highlight=""
    items={[
      {
        title: 'The Bitcoin Cash Podcast',
        description:
          'BCH conversations.',
        icon: 'https://static.panmoni.org/bitcoincashsite/bchpodcast.png',
        url: 'https://bitcoincashpodcast.com/',
      },
      {
        title: 'Noise',
        description:
          'An invite-only social network.',
        icon: 'https://static.panmoni.org/bitcoincashsite/noise.png',
        url: 'https://noise.app/',
      },
      {
        title: 'Read.cash',
        description:
          'BCH Medium clone.',
        icon: 'https://static.panmoni.org/bitcoincashsite/readcash.jpeg',
        url: 'https://read.cash/',
      },
      {
        title: 'BCH Network Discussion',
        description:
          'BCH developers on YouTube.',
        icon: 'https://static.panmoni.org/bitcoincashsite/discussions.png',
        url: 'https://www.youtube.com/channel/UCmyoHmbSsChInLzZ9S5aAAw',
      },
      ]}
  />

  <Boxes
  title=""
  subtitle="General BCH Websites"
  highlight=""
  items={[
    {
      title: 'BitcoinCash.org',
      description:
        'One-page BCH website.',
      icon: 'https://static.panmoni.org/bitcoincashsite/bch.jpeg',
      url: 'https://bitcoincash.org/',
    },
    {
      title: 'BCH.info',
      description:
        'BCH developer website.',
      icon: 'https://static.panmoni.org/bitcoincashsite/bchdotinfo.jpeg',
      url: 'https://bch.info/',
    },
    {
      title: 'WhyBitcoinCash.com',
      description:
        'Introductory BCH website.',
      icon: 'https://static.panmoni.org/bitcoincashsite/bch.jpeg',
      url: 'https://whybitcoincash.com/',
    },
    ]}
/>

<Boxes
title=""
subtitle="Papers"
highlight=""
items={[
  {
    title: 'The Bitcoin Whitepaper',
    description:
      'by Satoshi Nakamoto',
    icon: '',
    url: 'https://www.bitcoin.com/bitcoin.pdf',
  },
  {
    title: 'Letter from the CEO of BCH',
    description:
      'by Rick Falkvinge',
    icon: '',
    url: 'https://falkvinge.net/wp-content/uploads/2017/11/letter-from-the-ceo.pdf',
  },
  ]}
/>

<Boxes
title=""
subtitle="Utilities"
highlight=""
items={[
  {
    title: 'Coin.Dance',
    description:
      'BCH blockchain info.',
    icon: '',
    url: 'https://cash.coin.dance/',
  },
  {
    title: 'BitcoinFees.Cash',
    description:
      'BTC & BCH fee tracker.',
    icon: '',
    url: 'https://bitcoinfees.cash/',
  },
  {
    title: 'fork.lol',
    description:
      'BCH blockchain info.',
    icon: '',
    url: 'https://fork.lol/',
  },
  {
    title: 'jochen-hoenicke.de',
    description:
      'BCH mempool data.',
    icon: '',
    url: 'https://jochen-hoenicke.de/queue/#BCH,24h,weight',
  },
  ]}
/>

  <!-- Big Vid -->

  <BigVid
  video='<iframe class="w-full h-full" src="https://www.youtube.com/embed/arFDrjx_2JY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>'
/>


  <!-- End Big Vid -->
  
  <!-- Why BCH -->

  <Features
  highlight=""
  title="Why Bitcoin Cash"
  subtitle="What makes Bitcoin Cash special and what can you do with it?"
  items={[
    [
      {
        title: 'Micro-Fees',
        description:
          'With Bitcoin Cash, it costs almost nothing to send value from one side of the planet to the other. That\'s  more money in your pocket & new use cases.',
        icon: 'tabler:wallet',
      },
      {
        title: 'Scalable',
        description:
          'Bitcoin Cash is world-scale peer-to-peer electronic cash that can scale to serve billions of daily users. As you grow, Bitcoin Cash grows with you. No limits!',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Unstoppable',
        description:
          'No one can close your Bitcoin Cash wallet or freeze your funds. With optional privacy and built-in censorship resistance, BCH can\'t be stopped!',
        icon: 'tabler:rocket',
      },
    ],
    [
      {
        title: 'Safe Haven',
        description:
          'Hyper-inflation and other government corruption reducing the value of your bank deposits? withdrawals limited? Bitcoin Cash fixes that.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Remittances',
        description:
          'Send money home across the world right now, no forms, no limits, no rejected transactions and almost no fees. Now you can do that with Bitcoin Cash.',
        icon: 'tabler:cash',
      },
      {
        title: 'Cross-Border',
        description:
          'Pay for your goods and services across borders, without limits, bank costs, delays and with almost no fees. Bitcoin Cash works everywhere!',
        icon: 'tabler:world',
      },
    ],
  ]}
  />

  <!-- End Why BCH -->
 

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Get BCH updates',
      href: 'https://t.me/bitcoincashsite',
      icon: 'tabler:brand-telegram',
    }}
  >
    <Fragment slot="title">
      Get BCH Updates
    </Fragment>

    <Fragment slot="subtitle">
      Stay up-to-date with Bitcoin Cash! 
    </Fragment>
  </CallToAction>
</Layout>

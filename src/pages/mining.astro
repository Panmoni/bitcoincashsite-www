---
import Layout from '~/layouts/PageLayout.astro';

import Features from '~/components/widgets/Features.astro';
import Boxes from '~/components/widgets/Boxes.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import InnerTitle from '~/components/widgets/InnerTitle.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'BCH Mining',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- InnerTitle Widget ******************* -->

  <InnerTitle>
    <Fragment slot="title">Bitcoin Cash Mining</Fragment>

    <Fragment slot="subtitle">
      Mining BCH requires a significant capital investment and inexpensive electricity.
    </Fragment>
  </InnerTitle>

  <Boxes
    title="BCH Mining Options"
    subtitle="Here are some recommended Bitcoin Cash BCH mining pools, tools and guides."
    highlight="Mine a BCH block"
    items={[
      {

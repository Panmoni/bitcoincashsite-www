---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Boxes from '~/components/widgets/Boxes.astro';
import BigVid from '~/components/widgets/BigVid.astro';
import Content from '~/components/widgets/Content.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import InnerTitle from '~/components/widgets/InnerTitle.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>

  <!-- InnerTitle Widget ******************* -->

  <InnerTitle>
    <Fragment slot="title">
      Build Bitcoin Cash
    </Fragment>

    <Fragment slot="subtitle">
      You can build apps, services and more on Bitcoin Cash BCH.
    </Fragment>
  </InnerTitle>


  <Boxes
    title="How to Build with BCH"
    subtitle="Here are some recommended tools for building with Bitcoin Cash."
    highlight=""
    items={[
      {
        title: 'mainnet',
        description:
          'Javascript all-in-one + API.',
        icon: '',
        url: 'https://mainnet.cash/',
      },
      {
        title: 'bitcoincashj',
        description:
          'A Java library.',
        icon: '',
        url: 'https://github.com/pokkst/bitcoincashj',
      },
      {
        title: 'bch-js',
        description:
          'A Javascript library.',
        icon: '',
        url: 'https://github.com/Permissionless-Software-Foundation/bch-js',
      },
      {
        title: 'BitCash',
        description:
          'A Python library.',
        icon: '',
        url: 'https://pybitcash.github.io/bitcash/',
      },
      {
        title: 'BitcoinKit-iOS',
        description:
          'Swift SPV wallet + library.',
        icon: '',
        url: 'https://github.com/horizontalsystems/bitcoin-kit-ios',
      },
      {
        title: 'BitcoinKit (Android)',
        description:
          'Kotlin SPV wallet + library.',
        icon: '',
        url: 'https://github.com/horizontalsystems/bitcoin-kit-android',
      },
      {
        title: 'BitBox SDK Lite',
        description:
          'Build with Flutter.',
        icon: '',
        url: 'https://github.com/tomasforgacbch/bitbox-flutter',
      },
      {
        title: 'Haskoin Core',
        description:
          'Build with Haskell.',
        icon: '',
        url: 'https://github.com/haskoin/haskoin-core',
      },
      {
        title: 'Bitcore Lib Cash',
        description:
          'BCH JS library by BitPay.',
        icon: '',
        url: 'https://github.com/bitpay/bitcore/tree/master/packages/bitcore-lib-cash',
      },
      {
        title: 'python-bitcoincash',
        description:
          'Low-level Python library.',
        icon: '',
        url: 'https://github.com/dagurval/python-bitcoincash',
      },
      {
        title: 'Signup',
        description:
          'A wallet for building BCH apps.',
        icon: '',
        url: 'https://signup.cash/',
      },
    ]}
  />


  <!-- Big Vid -->

  <BigVid
  video='<iframe class="w-full h-full" src="https://www.youtube.com/embed/arFDrjx_2JY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>'
/>


  <!-- End Big Vid -->
  
  <!-- Why BCH -->

  <Features
  highlight=""
  title="Why Bitcoin Cash"
  subtitle="What makes Bitcoin Cash special and what can you do with it?"
  items={[
    [
      {
        title: 'Micro-Fees',
        description:
          'With Bitcoin Cash, it costs almost nothing to send value from one side of the planet to the other. That\'s  more money in your pocket & new use cases.',
        icon: 'tabler:wallet',
      },
      {
        title: 'Scalable',
        description:
          'Bitcoin Cash is world-scale peer-to-peer electronic cash that can scale to serve billions of daily users. As you grow, Bitcoin Cash grows with you. No limits!',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Unstoppable',
        description:
          'No one can close your Bitcoin Cash wallet or freeze your funds. With optional privacy and built-in censorship resistance, BCH can\'t be stopped!',
        icon: 'tabler:rocket',
      },
    ],
    [
      {
        title: 'Safe Haven',
        description:
          'Hyper-inflation and other government corruption reducing the value of your bank deposits? withdrawals limited? Bitcoin Cash fixes that.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Remittances',
        description:
          'Send money home across the world right now, no forms, no limits, no rejected transactions and almost no fees. Now you can do that with Bitcoin Cash.',
        icon: 'tabler:cash',
      },
      {
        title: 'Cross-Border',
        description:
          'Pay for your goods and services across borders, without limits, bank costs, delays and with almost no fees. Bitcoin Cash works everywhere!',
        icon: 'tabler:world',
      },
    ],
  ]}
  />

  <!-- End Why BCH -->
 

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Get BCH updates',
      href: 'https://t.me/bitcoincashsite',
      icon: 'tabler:brand-telegram',
    }}
  >
    <Fragment slot="title">
      Get BCH Updates
    </Fragment>

    <Fragment slot="subtitle">
      Stay up-to-date with Bitcoin Cash! 
    </Fragment>
  </CallToAction>
</Layout>

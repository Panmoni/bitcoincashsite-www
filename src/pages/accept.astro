---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Boxes from '~/components/widgets/Boxes.astro';
import BigVid from '~/components/widgets/BigVid.astro';
import Content from '~/components/widgets/Content.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import InnerTitle from '~/components/widgets/InnerTitle.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>

  <!-- InnerTitle Widget ******************* -->

  <InnerTitle>
    <Fragment slot="title">
      Accept Bitcoin Cash
    </Fragment>

    <Fragment slot="subtitle">
      Bitcoin Cash is a great way for all kinds of merchants to get paid
    </Fragment>
  </InnerTitle>


  <Boxes
    title="Bitcoin Cash Merchant Tools"
    subtitle="Take advantage of these tools to make accepting BCH even easier."
    highlight=""
    items={[
      {
        title: 'Prompt.cash',
        description:
          'BCH payment gateway.',
        icon: 'https://static.panmoni.org/bitcoincashsite/prompt-cash.jpeg',
        url: 'https://prompt.cash/',
      },
      {
        title: 'Coinbase Commerce',
        description:
          'A crypto payments gateway.',
        icon: 'https://static.panmoni.org/bitcoincashsite/coinbase-wallet.png',
        url: 'https://commerce.coinbase.com/',
      },
      {
        title: 'GoURL.io',
        description:
          'A crypto payment gateway.',
        icon: 'https://static.panmoni.org/bitcoincashsite/go-url.png',
        url: 'https://gourl.io/',
      },
      {
        title: 'Pay Button',
        description:
          'An easy BCH payment button.',
        icon: 'https://static.panmoni.org/bitcoincashsite/pay-button.jpeg',
        url: 'https://paybutton.org/',
      },
      {
        title: 'CoinGate',
        description:
          'A crypto payment gateway.',
        icon: 'https://static.panmoni.org/bitcoincashsite/coingate.jpeg',
        url: 'https://coingate.com/accept',
      },
      {
        title: 'CoinPayments',
        description:
          'A crypto payment gateway.',
        icon: 'https://static.panmoni.org/bitcoincashsite/coin-payments.jpeg',
        url: 'https://www.coinpayments.net/',
      },
    ]}
  />


  <!-- Big Vid -->

  <BigVid
  video='<iframe class="w-full h-full" src="https://www.youtube.com/embed/arFDrjx_2JY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>'
/>


  <!-- End Big Vid -->
  
  <!-- Why BCH -->

  <Features
  highlight=""
  title="Why Bitcoin Cash"
  subtitle="What makes Bitcoin Cash special and what can you do with it?"
  items={[
    [
      {
        title: 'Micro-Fees',
        description:
          'With Bitcoin Cash, it costs almost nothing to send value from one side of the planet to the other. That\'s  more money in your pocket & new use cases.',
        icon: 'tabler:wallet',
      },
      {
        title: 'Scalable',
        description:
          'Bitcoin Cash is world-scale peer-to-peer electronic cash that can scale to serve billions of daily users. As you grow, Bitcoin Cash grows with you. No limits!',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Unstoppable',
        description:
          'No one can close your Bitcoin Cash wallet or freeze your funds. With optional privacy and built-in censorship resistance, BCH can\'t be stopped!',
        icon: 'tabler:rocket',
      },
    ],
    [
      {
        title: 'Safe Haven',
        description:
          'Hyper-inflation and other government corruption reducing the value of your bank deposits? withdrawals limited? Bitcoin Cash fixes that.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Remittances',
        description:
          'Send money home across the world right now, no forms, no limits, no rejected transactions and almost no fees. Now you can do that with Bitcoin Cash.',
        icon: 'tabler:cash',
      },
      {
        title: 'Cross-Border',
        description:
          'Pay for your goods and services across borders, without limits, bank costs, delays and with almost no fees. Bitcoin Cash works everywhere!',
        icon: 'tabler:world',
      },
    ],
  ]}
  />

  <!-- End Why BCH -->
 

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Get BCH updates',
      href: 'https://t.me/bitcoincashsite',
      icon: 'tabler:brand-telegram',
    }}
  >
    <Fragment slot="title">
      Get BCH Updates
    </Fragment>

    <Fragment slot="subtitle">
      Stay up-to-date with Bitcoin Cash! 
    </Fragment>
  </CallToAction>
</Layout>

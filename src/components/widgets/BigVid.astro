---
export interface Props {
  video?: string;
}

const { video = await Astro.slots.render('video') } = Astro.props;
---

<section class="relative">
  <div class="absolute inset-0 pointer-events-none mb-32" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto pt-10 px-4 sm:px-6 -mb-12">
    <div class="grid place-items-center">
      <div class="relative h-0 pb-[56.25%]" set:html={video} />
    </div>
  </div>
</section>

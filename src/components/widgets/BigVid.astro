---
export interface Props {
  video?: string;
}

const {
  video = await Astro.slots.render('video'),
} = Astro.props;
---

<section class="relative">
  <div class="absolute inset-0 bg-green-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 -mb-12">
    <div class="grid place-items-center min-h-[560px] max-h[1080px]">
      <div class="aspect-w-16 aspect-h-9" set:html={video}>
      </div>
    </div>
  </div>
</section>

